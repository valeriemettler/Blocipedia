<h1>All Wikis</h1>

<% if current_user %>
  <p><%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %></p>
<% end %>

<% @wikis.each do |wiki| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <p><%= link_to wiki.title, wiki %></p>
      </h4>
      <small>
        created <%= time_ago_in_words(wiki.created_at) %> ago by <%= wiki.user.name %>
      </small>
     </div>
   </div>
<% end %>
